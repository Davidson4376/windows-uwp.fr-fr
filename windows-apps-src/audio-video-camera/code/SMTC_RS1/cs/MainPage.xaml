<Page
    x:Class="SMTC_RS1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SMTC_RS1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <MediaPlayerElement x:Name="mediaPlayerElement"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button x:Name="Action1" Content="Action 1" Click="Action1_Click"/>
            <Button x:Name="Action2" Content="Action 2" Click="Action2_Click"/>
            <Button x:Name="MyNextButton" Content="Next" Click="MyNextButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
